#!/usr/bin/env node
'use strict';

// Load environment variables - use ENV_FILE path if set, otherwise .env
const envPath = process.env.ENV_FILE || '.env';
console.log('Loading environment variables from', envPath);
require('dotenv').config({ path: envPath });

// Module dependencies
const debug = require('debug')('express:server');
const http = require('http');
const { Server: SocketIOServer } = require('socket.io');
const { Server } = require('../dist/bundle-prototype');

// Server port and state
const httpPort = normalizePort(process.env.PORT || 3000);
console.log('Using port', httpPort);
const ctx = {};
const withSocketIO = process.env.WITH_SOCKETIO || 'false';

const serverInstance = Server.bootstrap();
serverInstance
  .init()
  .then(done => {
    if (done) {
      console.log('Server initialised (prototype mode).');
      const app = serverInstance.app;
      app.set('port', httpPort);

      const httpServer = http.createServer(app);
      if ('true' === withSocketIO) {
        console.log('initializing socket io');
        const io = new SocketIOServer(httpServer);
        io.on('connection', socket => {
          serverInstance
            .handleSocketIO(socket)
            .then(() => {})
            .catch(err => console.error('Failed to handle socket io', err));
        });
      }
      ctx.httpServer = httpServer;

      serverInstance.withServer(httpServer).then(withDone => {
        if (withDone) {
          httpServer.listen(httpPort);
          httpServer.on('error', onError);
          httpServer.on('listening', onListening);

          serverInstance.startedServer(httpServer).then(started => {
            if (started) {
              console.log('Server started.');
            } else {
              console.log('Server started with some post startup failures.');
            }
          });
        } else {
          console.error('withServer initialization failed');
        }
      });
    } else {
      console.error('Server initialization failed');
    }
  })
  .catch(err => {
    console.error('Failed to start server', err);
  });

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  const bind = typeof httpPort === 'string' ? 'Pipe ' + httpPort : 'Port ' + httpPort;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = ctx.httpServer.address();
  const bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
