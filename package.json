{
  "name": "node-ts-express-base",
  "version": "11.0.0",
  "description": "Node.js TypeScript Express - Prototype Backend for Demos & Rapid Prototyping",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules STORAGE=memory ENABLE_QUEUE=false jest",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules STORAGE=prisma DATABASE_URL=postgresql://user:pass@localhost:5432/nteb?schema=public REDIS_URL=redis://localhost:6379 ENABLE_QUEUE=true AUTH_MODE=full JWT_SECRET=test-secret-for-integration-only jest -c jest.integration.config.js",
    "build": "webpack",
    "build:prototype": "webpack --config webpack.prototype.config.js",
    "start": "node ./bin/www",
    "start:prototype": "ENV_FILE=env.prototype node ./bin/www-prototype",
    "start:build": "webpack --watch",
    "start:watch": "nodemon",
    "dev": "concurrently npm:start:*",
    "env:prototype": "cp env.prototype .env",
    "env:production": "cp env.production .env",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run format:check"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test/integration"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testTimeout": 10000,
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-express-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "engines": {
    "node": "22.x"
  },
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-express-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-express-base",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.2",
    "bullmq": "^5.67.2",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "luxon": "^3.7.2",
    "pg": "^8.18.0",
    "pug": "^3.0.3",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "npm": "^11.8.0",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
