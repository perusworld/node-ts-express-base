{
  "name": "node-ts-express-base",
  "version": "5.0.1",
  "description": "Node.js TypeScript Express - Base",
  "scripts": {
    "test": "jest",
    "build": "node ./node_modules/typescript/bin/tsc",
    "postinstall": "node ./node_modules/typescript/bin/tsc",
    "start": "node ./bin/www",
    "start:build": "node ./node_modules/typescript/bin/tsc -w",
    "start:watch": "nodemon ./bin/www",
    "dev": "concurrently npm:start:*"
  },
  "jest": {
    "globals": {},
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-express-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "engines": {
    "node": "18.x"
  },
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-express-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-express-base",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pug": "^3.0.2",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
