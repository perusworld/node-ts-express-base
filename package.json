{
  "name": "node-ts-express-base",
  "version": "8.0.0",
  "description": "Node.js TypeScript Express - Base",
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "start": "node ./bin/www",
    "start:build": "webpack --watch",
    "start:watch": "nodemon",
    "dev": "concurrently npm:start:*",
    "postinstall": "webpack",
    "format": "prettier --write \"**/*.{js,ts,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,html,css}\"",
    "lint": "npm run format:check"
  },
  "jest": {
    "globals": {},
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-ts-express-base.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "engines": {
    "node": "22.x"
  },
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-ts-express-base/issues"
  },
  "homepage": "https://github.com/perusworld/node-ts-express-base",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "luxon": "^3.7.1",
    "pug": "^3.0.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "install": "^0.13.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "npm": "^11.5.2",
    "prettier": "^3.5.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
