generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("user") // "user" | "admin" (system admin)
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id          String    @id @default(uuid())
  userId      String?   // null = system job
  type        String    // e.g. "dummy", "send-welcome-email"
  status      String    // pending | processing | completed | failed
  meta        Json?    // arguments/input
  result      Json?    // worker response
  error       Json?    // on failure: { message, code?, ... }
  bullJobId   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  @@index([userId, status])
  @@index([userId, createdAt])
}
